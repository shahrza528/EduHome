
@{
    ViewData["Title"] = "Index";
}

<section id="about" style="background-image: url(/assets/image/banner.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="banner-content-wrapper">
                    <div class="banner-content">
                        <h2>Login</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="overlay"></div>
</section>
<section id="Login">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form action="">
                                <input type="text" placeholder="Username" class="qeydiyyat" name="Username">
                                <input type="password" placeholder="Password" class="qeydiyyat" name="password">
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <div class="check">
                                            <input type="checkbox">
                                            <label for="Remember me">Remember me</label>
                                            <a href="">Forgot Password?</a>

                                        </div>

                                    </div>
                                    <button type="submit">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

