<section class="login_panel">
    <div class="container">
        <div class="row">
            <div class="login_block">
                <h2>Login</h2>
                <p>Please login using account detail bellow.</p>
                <form action="">
                    <input class="login_input" type="text" placeholder="Username" required>
                    <input class="login_input" type="password" placeholder="Password" required>
                    <input class="remember_checkbox" type="checkbox">
                    <p>Remember me</p>
                    <a href="">Forgot Password?</a>
                    <br>
                    <input class="submit_input" type="submit" placeholder="Login">
                </form>
            </div>
        </div>
    </div>
</section>